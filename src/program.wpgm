
import wollok.game.*
import auto.*

program miPrimerWollokGame {
	// l√≠mites del tablero de juego
	game.width(20)
	game.height(15)

	// fondo del tablero de juego
	game.boardGround("fondo.png")

	// agregamos a nuestro objeto auto
	game.addVisualCharacter(auto)
	keyboard.up().onPressDo({sonido.play()})
	keyboard.right().onPressDo({sonido.play()})
	keyboard.down().onPressDo({sonido.play()})
	keyboard.left().onPressDo({sonido.play()})
	
	game.showAttributes(auto)
	
	
	

	game.start()
}

